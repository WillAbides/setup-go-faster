#!/bin/bash

set -e

CDPATH="" cd -- "$(dirname -- "$(dirname -- "$0")")"

gen_pattern="<!--- start generated --->*<!--- end generated --->"

gen_sub="$(
  cat << EOF
<!--- start generated --->
$(
    script/action-doc \
      --skip-action-name \
      --skip-action-description \
      --header-prefix='#' \
      action.yml
  )
<!--- end generated --->
EOF
)"

readme="$(cat README.md)"
echo "${readme//$gen_pattern/$gen_sub}" > README.md
